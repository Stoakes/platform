{% extends '@App/Default/index.html.twig' %}

{% block main %}
    {% for label, flashes in app.session.flashbag.all %}
        {% for flash in flashes %}
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 alert alert-{{ label }}">
                        {{ flash }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
    <h3>Importer un Yam en base de donnée</h3>
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(form) }}
            {{ form_label(form.yaml) }}
            {{ form_widget(form.yaml, {'attr': {'style': 'width: 100%;', 'rows': '20'}}) }}

            {{ form_label(form.tests) }}
            {{ form_widget(form.tests) }}
            <br>
            {{ form_label(form.proceed) }}
            {{ form_widget(form.proceed) }}
            <button type="submit" class="btn btn-primary">Importer</button>
            {{ form_end(form) }}
            <br>
            <br>
            <a href="{{ path('homepage') }}">Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}

{% block react %}
{% endblock %}